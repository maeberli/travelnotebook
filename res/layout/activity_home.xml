<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
 
    <!-- The navigation drawer -->
    <RelativeLayout  android:id="@+id/left_drawer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        android:divider="#666"
        android:dividerHeight="1dp"
        android:background="#333"
        android:padding="15sp"
        android:orientation="vertical">
    	
    	<Button android:id="@+id/btn_new_notebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_notebook" />
    	
    	<Button android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_new_notebook"
        android:text="@string/settings" />
    	
	    <ListView android:id="@+id/left_drawer_list"
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/btn_settings"
        	android:layout_alignParentBottom="true" />
	    
    </RelativeLayout>
 
</android.support.v4.widget.DrawerLayout>