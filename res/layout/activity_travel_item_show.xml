<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TravelItemShowActivity" >

    <fragment
        android:id="@+id/travel_item_show_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_travel_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#AA000000"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_travel_item_show_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#AA000000"
            android:gravity="center"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:contentDescription="@+string/hello_world" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="#AA000000"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@+string/date_image"
                android:src="@drawable/date_from" />

            <TextView
                android:id="@+id/tv_travel_item_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_travel_item_date_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@+string/date_image"
                android:src="@drawable/date_link" />

            <ImageView
                android:id="@+id/iv_travel_item_date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@+string/date_image"
                android:src="@drawable/date_to" />

            <TextView
                android:id="@+id/tv_travel_item_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>